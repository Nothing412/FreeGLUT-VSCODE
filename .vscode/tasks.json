{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-I${workspaceFolder}/include",
                "-o",
                "${workspaceFolder}/bin/main.exe",
                "-L${workspaceFolder}/lib",
                "-lfreeglut",
                "-lwinmm",
                "-lgdi32",
                "-lglu32",
                "-lopengl32"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },

        {
            "type": "cppbuild",
            "label": "Release",
            "command": "g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-I${workspaceFolder}/include",
                "-03",
                "${workspaceFolder}/bin/main.exe",
                "-L${workspaceFolder}/lib",
                "-lfreeglut",
                "-lwinmm",
                "-lgdi32",
                "-lglu32",
                "-lopengl32"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "detail": "Task generated by Nothing412."
        }
    ],
    "version": "2.0.0"
}